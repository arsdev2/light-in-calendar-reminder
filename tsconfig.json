{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowJs": true,
    // Generate d.ts files
    "declaration": true,
    "strictPropertyInitialization": false,
    "paths": {
      "src/*": ["src/*"]
    },
    "strictNullChecks": false
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": ["node_modules"]
}